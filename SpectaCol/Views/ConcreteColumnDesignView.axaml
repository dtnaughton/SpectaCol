<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SpectaCol.Views.ConcreteColumnDesignView">
	<Border CornerRadius="10" Background="#1C1D22">
		<Grid>
			<DataGrid Items="{Binding ConcreteColumns}">
				<DataGrid.Columns>
					<DataGridTextColumn Header="Width" Binding="{Binding Width}"/>
					<DataGridTextColumn Header="Depth" Binding="{Binding Depth}"/>
				</DataGrid.Columns>
			</DataGrid>
		</Grid>
	</Border>
</UserControl>
